{
  "author": "christopher.j.wallis@gmail.com",
  "dependencies": {
    "just-curves": "^0.2.0"
  },
  "devDependencies": {
    "cypress": "^13.14.2",
    "esbuild": "0.23.1"
  },
  "homepage": "http://just-animate.com",
  "license": "MIT",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "name": "just-animate",
  "repository": {
    "type": "git",
    "url": "https://github.com/just-animate/just-animate"
  },
  "scripts": {
    "build": "esbuild --bundle --minify --sourcemap --target=es2015 --format=esm --outdir=dist src/index.ts",
    "types": "tsc --emitDeclarationOnly --outDir dist",
    "Xbuild": "npm run copy:types && npm run build:full:prod && npm run build:full:dev",
    "Xbuild:full:debug": "rollup -w -c ./config/rollup.umd.js --configDebug",
    "Xbuild:full:dev": "rollup -c ./config/rollup.umd.js --configDebug",
    "Xbuild:full:prod": "rollup -c ./config/rollup.umd.js",
    "copy:types": "copyfiles -f ./src/types.d.ts dist",
    "clean": "node_modules/.bin/del-cli -f dist",
    "format": "prettier --print-width 80 --single-quote --list-different --write \"src/**/*.ts\"",
    "lint": "tslint --project .",
    "start": "npm run clean && npm run lint && npm run build",
    "test": "cypress run",
    "test:open": "cypress open",
    "test:debug": "npm run build:full:debug & ./node_modules/.bin/cypress open"
  },
  "type": "module",
  "types": "./types.d.ts",
  "typings": "./types/main",
  "typeRoots": [
    "node_modules/@types"
  ],
  "version": "3.0.0-alpha-0"
}
